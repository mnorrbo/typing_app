#    http://shiny.rstudio.com/
#

library(shiny)
library(tidyverse)
library(gplots)
library(shinyWidgets)

ui <- fluidPage(
                titlePanel("Colour Appreciation Society"),
    fluidRow(
        column(
            12,
            sliderTextInput(
                "colour",
                "Which colour?",
                choices = colours(),
                animate = animationOptions(interval = 500)),
            plotOutput("text"),
            align = "center")
                     
            ))

    server <- function(input, output){
        
        output$text <- renderPlot({
            ggplot() +
                geom_hline(yintercept = 5, colour = input$colour, size = 50) +
                annotate("text", label = input$colour, x = 5, y = 5) +
                theme_void() +
                scale_y_continuous(limits = c(4,6))
        })
        
    }
    
    shinyApp(ui, server)
