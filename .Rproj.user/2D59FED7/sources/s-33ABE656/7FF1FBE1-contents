#    http://shiny.rstudio.com/
#

library(shiny)
library(tidyverse)
library(gplots)
library(shinyWidgets)

ui <- fluidPage(setBackgroundColor(color = c(col2hex("white"), col2hex("black")),
                                   gradient = "radial",
                                   direction = c("top", "left")),
                titlePanel("Colour Appreciation Society"),
    sliderTextInput("colour", "Which colour?", choices = colours(), animate = animationOptions(interval = 100)),
    mainPanel(htmlOutput("text"))
                     
            )

    server <- function(input, output){
        
        output$text <- renderText({
            paste0('<h1 style=\"color:', 
                   col2hex(input$colour), 
                   '\">These are all the colours in R</h1>')
        })
        
    }
    
    shinyApp(ui, server)
